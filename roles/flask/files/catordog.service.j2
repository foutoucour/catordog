[Unit]
Description=Gunicorn instance to serve catordog
After=network.target

[Service]
WorkingDirectory={{ webapp_path }}
Environment="PATH={{ webapp_path }}/venv/bin"

Environment="DB_USER={{ db_user }}"
Environment="DB_PASSWORD={{ db_password }}"
Environment="DB_NAME={{ db_name }}"
Environment="DB_HOST={{ db_host }}"
Environment="DB_PORT={{ db_port }}"


ExecStart={{ webapp_path }}/venv/bin/gunicorn --workers {{ gunicorn_workers }} --bind 0.0.0.0:80 app:app

[Install]
WantedBy=multi-user.target
